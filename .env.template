# PostgreSQL Docker 项目环境变量配置模板
# 复制此文件为 .env 并根据需要修改配置

# PostgreSQL 基础配置
POSTGRES_VERSION=16
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_123

# 镜像配置
POSTGRES_IMAGE_NAME=custom-postgres
POSTGRES_IMAGE_TAG=latest

# 端口配置
POSTGRES_PORT=5432
PGADMIN_PORT=8080
REDIS_PORT=6379
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 项目配置
PROJECT_NAME=my-postgresql-project
COMPOSE_PROJECT_NAME=my-pg

# 构建配置
# 跳过Git扩展编译（推荐本地测试时设为true，远程构建设为false）
SKIP_GIT_EXTENSIONS=false

# 管理工具配置
PGADMIN_DEFAULT_EMAIL=admin@postgres.local
PGADMIN_DEFAULT_PASSWORD=admin123
REDIS_PASSWORD=redis_pass_123

# 路径配置
BACKUP_PATH=./backups
NGINX_LOGS_PATH=./logs/nginx
